{
  "name": "foos-and-friends",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:foosball": "pnpm --filter @foos/foosball dev",
    "dev:padel": "pnpm --filter @foos/padel dev",
    "dev:chess": "pnpm --filter @foos/chess dev",
    "build": "pnpm -r build",
    "build:foosball": "pnpm --filter @foos/foosball build",
    "build:padel": "pnpm --filter @foos/padel build",
    "build:chess": "pnpm --filter @foos/chess build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "test:coverage": "pnpm -r test:coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@faker-js/faker": "^10.2.0"
  }
}
