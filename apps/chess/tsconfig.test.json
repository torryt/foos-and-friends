{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vitest/globals", "vite/client", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/__tests__/*.ts",
    "src/**/__tests__/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx"
  ]
}
